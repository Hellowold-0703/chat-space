  .form
   %form{class: "new-message"}
    .input-box
     %input{placeholder: "type a message", class: "input-box__text", type: "text"}
     %label{class: "input-box__image",for: "message_image"}
      %i{class:"fa fa-image"}
      %input{type: "file", name: "image", id: "message_image"}
    %input{type: "submit", name: "send", value: "Send", class: "submit-btn"} 